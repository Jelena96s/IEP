@model Projekat.Models.CreateNewAuction
@{
    ViewBag.Title = "CreateNewAuction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Auction</h2>


<h3>@ViewBag.Message</h3>
<center>
<div class="row">
   
        <div class="col-md-8">
            @using (Html.BeginForm("CreateNewAuction", "Auction", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.image, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input type="file" name="image" required />
                        @Html.ValidationMessageFor(m => m.image, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.startPrice, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.startPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.startPrice, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.duration, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.duration, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.duration, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
  
</div>
</center>    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
